<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:buttonTint="#FF0000"
        android:text=""
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/increase_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="increase priority"
            android:textSize="10sp"
            android:fontFamily="@font/hind_semibold"
            android:stateListAnimator="@null"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">

        </Button>

        <Button
            android:id="@+id/decrease_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="decrease priority"
            android:textSize="10sp"
            android:fontFamily="@font/hind_semibold"
            android:stateListAnimator="@null"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chore_list_element_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chore Name"
            android:textColor="@android:color/black"
            android:fontFamily="@font/hind_bold"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chore_list_element_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hind"
            android:text="Chore Description"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/chore_list_element_roommate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assigned Roommate"
            android:textAllCaps="false"
            android:fontFamily="@font/hind"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>