<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout android:id="@+id/edit_user_dialog_group"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText android:id="@+id/set_first_name"
            android:hint="First Name"
            android:importantForAutofill="no"
            android:inputType="text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>
        <EditText android:id="@+id/set_last_name"
            android:hint="Last Name"
            android:importantForAutofill="no"
            android:inputType="text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>
        <EditText android:id="@+id/set_house_name"
            android:hint="Household Name"
            android:importantForAutofill="no"
            android:inputType="text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/edit_user_dialog_group">

        <Button
            android:id="@+id/edit_user_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Cancel"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/leave_household"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Remove User"
            android:textAllCaps="true"
            android:textSize="9sp"
            android:visibility="visible" />

        <Space android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="1px"/>

        <Button
            android:id="@+id/edit_user_dialog_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Submit"
            android:textAllCaps="false" />

    </LinearLayout>
</RelativeLayout>